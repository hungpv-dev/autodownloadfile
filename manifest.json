{
  "name": "Tự động tải file Facebook",
  "version": "1.1",
  "description": "Tự động tải file dữ liệu từ Facebook Business",
  "manifest_version": 3,
  "icons": {
    "16": "images/logo.png",
    "32": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*", "*://*.business.facebook.com/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "storage",
    "downloads",
    "activeTab",
    "scripting",
    "cookies"
  ],
  "host_permissions": [
    "*://*.facebook.com/*",
    "*://*.business.facebook.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
